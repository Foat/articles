<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="3 seconds">
    <contextName>java-aspects</contextName>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} %-5level %class{0}.%method:%L - %msg%n
            </pattern>
        </encoder>
    </appender>

    <jmxConfigurator/>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="me.foat.articles.aspects" level="ALL"/>
</configuration>